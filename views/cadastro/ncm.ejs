<%-include('../partials/head')%>
<!--  -->
<div class="modal fade PRINCIPAL" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true" >
    <div class="modal-dialog modal-xl" style="width: 500px;">
      <div class="modal-content">
        <form class="needs-validation" id="form" novalidate>
          <div class="container" style="padding: 10px;" >
            <div class="modal-header">
              <h5>Cadastre um Ncm</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                  <span aria-hidden="true">&times;</span>
            </button>
          </div>
              <div class="row">
                <div class="col-sm"  >
                    <label for="COD_NCM_">Código Ncm</label>
                   <input type="number" class="form-control"  id="COD_NCM_" required>
                    <label for="NCM_DESC">Descrição</label>
                   <input type="text" class="form-control"  id="NCM_DESC" required>
                </div>
              </div>
          
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                <button  type="submit"  id="Salvar"  class="btn btn-success ">Salvar</button>
              </div>
            </div>
          
          </form>
      </div>
    </div>
  </div>
<!--  -->
<div class="grad" style="display: flex;height: auto;padding: 30px;">
  <div style="width: 300px;height: 400px;">
   <form>
<%let filtro = P_USU.T_FILTRO%> 

    <div class="form-group row">

        <div class="col-sm-10">
            <span >Código Ncm</span>
            <input type="number"  class="form-control" placeholder="ID" name="" id="COD" value="<%=filtro[0][0]%>">
        </div>
 
        <div class="col-sm-10">
            <span >Descrição</span>
            <input type="text"  class="form-control" placeholder="Descrição" name="" id="NCM" value="<%=filtro[0][1]%>">
        </div>

    </div>

    <button id="filtro" class="btn btn-primary">Buscar</button>

   </form>
  </div>
  <!-- Tabela -->
  <div style="width: 100%;display: block;">
    <%- include('../components/exporta.ejs');%>

    <table class="table table-hover" id="Ncm" style="height: auto;">
      <thead>
          <tr>
              <th>Código</td>
              <th>Descrição</td>
          </tr>
      </thead>
      <tbody>
          <!-- Dados sendo inseridos automaticamente -->
      </tbody>
    </table>
  </div>

</div>

<script type="module" src="/js/cadastro/ncm.js"></script>
<%-include('../partials/footer')%>